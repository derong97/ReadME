{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "KeyName": {
            "Description": "Amazon EC2 Key Pair",
            "Type": "AWS::EC2::KeyPair::KeyName"
        }
    },
    "Resources": {
        "myVPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": "172.31.0.0/16",
                "EnableDnsSupport": "true",
                "EnableDnsHostnames": "true"
            }
        },
        "HadoopSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "myVPC"
                },
                "SecurityGroupIngress": [{
                    "IpProtocol": "tcp",
                    "FromPort": "22",
                    "ToPort": "22",
                    "CidrIp": "0.0.0.0/0"
                }],
                "GroupDescription": "Allow incoming SSH access"
            }
        },
        "InternalIngress": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "GroupId": { "Ref": "HadoopSecurityGroup" },
                "IpProtocol": "-1",
                "ToPort": "65535",
                "FromPort": "0",
                "SourceSecurityGroupId": { "Ref": "HadoopSecurityGroup" }
            },
            "DependsOn": "HadoopSecurityGroup"
        },
        "Node0": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-0f82752aa17ff8f5d",
                "InstanceType": "t2.medium",
                "KeyName": { "Ref": "KeyName" },
                "SecurityGroupIds": [{
                    "Ref": "HadoopSecurityGroup"
                }]
            },
            "DependsOn": [
                "HadoopSecurityGroup"
            ]
        },
        "Node1": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-0f82752aa17ff8f5d",
                "InstanceType": "t2.medium",
                "KeyName": { "Ref": "KeyName" },
                "SecurityGroupIds": [{
                    "Ref": "HadoopSecurityGroup"
                }]
            },
            "DependsOn": [
                "HadoopSecurityGroup"
            ]
        }
    },
    "Outputs": {
        "Node0PublicIP": {
            "Description": "Public IP of Node0",
            "Value": {
                "Fn::GetAtt": [
                    "Node0",
                    "PublicIp"
                ]
            }
        },
        "Node0PrivateIP": {
            "Description": "Private IP of Node0",
            "Value": {
                "Fn::GetAtt": [
                    "Node0",
                    "PrivateIp"
                ]
            }
        },
        "Node1PublicIP": {
            "Description": "Public IP of Node1",
            "Value": {
                "Fn::GetAtt": [
                    "Node1",
                    "PublicIp"
                ]
            }
        },
        "Node1PrivateIP": {
            "Description": "Private IP of Node1",
            "Value": {
                "Fn::GetAtt": [
                    "Node1",
                    "PrivateIp"
                ]
            }
        }
    }
}